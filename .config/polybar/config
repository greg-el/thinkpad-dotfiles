[colors]
background = ${env:hex0}
foreground = ${env:hex0}
foreground-alt = ${env:hex7}
primary = ${env:hex0}
secondary = ${env:hex2}
alert = ${xrdb:color3}

[bar/main]
modules-right = spotify-control wireless-network pulseaudio battery main-light sec-light date
modules-left = i3-main
monitor = ${env:MONITOR:eDP1}
font-0 = Misc Tamsyn:${colors.primary}:size=13;2
font-2 = FontAwesome:size=10;2
font-1 = Siji;2
#bottom = true
height = 20
#width = 1888
#offset-x = 16
#override-redirect = true
background = ${colors.background}
module-margin = 1

[settings]
screenchange-reload = true

[module/spotify-control]
type = custom/script
exec = ~/.config/polybar/spotify-control.sh
click-left = if [[ "$(playerctl status)" = "Playing" ]]; then playerctl pause; echo -n "paused"; else playerctl play; echo -n "playing"; fi
click-right = playerctl next
click-middle = playerctl previous
interval = 1.0

[module/network]
type = internal/network
interface = enp24s0
interval = 5.0

[module/wireless-network]
type = internal/network
interface = wlp3s0
interval = 3
label-connected = %essid%
format-connected = <ramp-signal> <label-connected>
ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 

[module/battery]
type = internal/battery
full-at = 100
