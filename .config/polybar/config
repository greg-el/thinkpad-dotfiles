format-discharging = <ramp-capacity>
label-full = 
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-5 = 
ramp-capacity-6 = 
ramp-capacity-7 = 
ramp-capacity-8 = 

[module/backlight]
type = internal/backlight
card = intel_backlight
label = %percentage%%

[module/date]
type = internal/date
interval = 1.0
date = %d-%m-%Y
time = %H:%M:%S
label = %date% %time%

[module/i3-main]
type = internal/i3
index-sort = true
pin-workspaces = false
ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-default = 
format = <label-state> <label-mode>
label-focused = %icon%
label-focused-foreground = #ffffff
label-focused-background = ${env:hex10}
label-focused-underline = #fba922
label-focused-padding = 2
label-unfocused = %icon%
label-unfocused-padding = 2
label-mode = %mode%
label-mode-padding = 2
label-mode-background = #e60053
label-visible = %icon%
label-visible-underline = #555555
label-visible-padding = 2


[module/main-light]
type = custom/script
exec = echo ""
click-left = ssh pi "python3 ~/scripts/light-toggle.py --on main"
click-right = ssh pi "python3 ~/scripts/light-toggle.py --off main"

[module/sec-light]
type = custom/script
exec = echo ""
click-left = ssh pi "python3 ~/scripts/light-toggle.py --on sec"
click-right = ssh pi "python3 ~/scripts/light-toggle.py --off sec"

